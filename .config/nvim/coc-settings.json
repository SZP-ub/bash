{
    "clangd.arguments": [
        "--background-index",
        "--clang-tidy",
        "--header-insertion=iwyu",
        "--completion-style=detailed"
    ],
    "clangd.semanticHighlighting": true,
    "clangd.checkUpdates": true,
    "clangd.inlayHints.enable": true,
    // "clangd.fallbackFlags": ["-std=c17"],
    "clangd.fallbackFlags": ["-Wall"],
    "clangd.disableCompletion": false,
    "clangd.showFileStatus": true,

    "suggest.ignoreCase": true,
    "suggest.caseSensitive": false,
    "semanticTokens.enable": true,
    "suggest.minTriggerInputLength": 1,
    "snippets.priority": 100,
    "coc.source.buffer.priority": 100,
    "coc.source.clangd.priority": 8,
    "hover.enable": true,
    "suggest.triggerAfterInsertEnter": true,

    "diagnostic.virtualText": true,
    "diagnostic.virtualTextCurrentLineOnly": false,
    "diagnostic.errorSign": "✗",
    "diagnostic.warningSign": "⚠",
    "diagnostic.infoSign": "ℹ",
    "diagnostic.hintSign": "➤",
    "diagnostic.refreshOnInsertMode": false,
    "diagnostic.checkCurrentLine": true,

    "coc.preferences.messageLevel": "warning",

    "suggest.autoTrigger": "always",
    "suggest.maxCompleteItemCount": 20,
    "suggest.floatEnable": true,
    "suggest.noselect": false,
    "suggest.floatConfig": {
        "border": "rounded",
        "shadow": false
    },

    "snippets.ultisnips.pythonPrompt": false,
    "ultisnips.directories": ["$HOME/.config/coc/ultisnips"],

    "markdownlint.config": {},

    "prettier.enable": true,
    "prettier.requireConfig": false,
    "prettier.tabWidth": 4,

    "[json]": {
        "editor.tabSize": 4
    },

    "sh.format.command": "shfmt",
    "sh.format.args": ["-i", "2", "-ci"],

    "coc.preferences.formatOnSave": true
}
